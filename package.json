{
  "name": "electron-remix-starter",
  "version": "1.0.0",
  "description": "A minimal Electron application written with Remix",
  "keywords": [
    "Electron",
    "Remix",
    "quick",
    "start",
    "tutorial",
    "typescript"
  ],
  "author": "Xiaochuan Ma <mxcins@gmail.com>",
  "main": "desktop/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.electron.json && remix build && electron-builder",
    "dev": "cross-env NODE_ENV=development remix dev --command \"nodemon\" --manual",
    "start": "cross-env NODE_ENV=production electron ."
  },
  "dependencies": {
    "@remix-run/node": "2.1.0",
    "@remix-run/react": "2.1.0",
    "@remix-run/server-runtime": "2.1.0",
    "isbot": "3.7.0",
    "jotai": "2.5.0",
    "mime": "3.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "2.1.0",
    "@remix-run/serve": "2.1.0",
    "@types/mime": "3.0.3",
    "@types/react": "18.2.28",
    "@types/react-dom": "18.2.13",
    "cross-env": "7.0.3",
    "electron": "27.0.0",
    "electron-builder": "24.6.4",
    "electron-devtools-installer": "3.2.0",
    "nodemon": "3.0.1",
    "typescript": "5.2.2"
  }
}
